<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gypsum" />
        </shape>
    </item>

    <item
        android:bottom="-50dp"
        android:left="0dp"
        android:right="0dp"
        android:top="-10dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="10dp"
                android:color="#FFC107" />
        </shape>
    </item>
</layer-list>
